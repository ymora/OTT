# ================================================================
# OTT - Configuration OVH VPS
# ================================================================
# Copier ce fichier en .env.production sur le serveur OVH
# ================================================================

# Base de donn√©es PostgreSQL
DB_NAME=ott_production
DB_USER=ott_user
DB_PASSWORD=CHANGE_ME_STRONG_PASSWORD

# Redis
REDIS_PASSWORD=CHANGE_ME_REDIS_PASSWORD

# JWT
JWT_SECRET=CHANGE_ME_JWT_SECRET_64_CHARS_MINIMUM

# Application
APP_ENV=production
APP_DEBUG=false

# CORS (ajouter votre domaine OVH)
CORS_ALLOWED_ORIGINS=https://ymora.github.io,https://ott-dashboard.onrender.com,https://votre-domaine.ovh

# Notifications (optionnel)
SENDGRID_API_KEY=
SENDGRID_FROM_EMAIL=noreply@happlyz.com
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_FROM_NUMBER=

# SSL (optionnel - pour Let's Encrypt)
SSL_EMAIL=admin@votre-domaine.ovh
SSL_DOMAIN=votre-domaine.ovh
