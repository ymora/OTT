# ================================================================================
# Variables d'Environnement - OTT Dashboard - PRODUCTION (Render)
# ================================================================================
# HAPPLYZ MEDICAL SAS
# ================================================================================

# ================================================================================
# ENVIRONNEMENT
# ================================================================================
APP_ENV=production
NODE_ENV=production

# ================================================================================
# API BACKEND (PHP) - CONFIGURATION PRODUCTION
# ================================================================================
# Mode de l'API : "production" (Render)
NEXT_PUBLIC_API_MODE=production

# URL de l'API backend pour Render
NEXT_PUBLIC_API_URL=https://ott-api-c387.onrender.com

# ================================================================================
# BASE DE DONNÉES (PostgreSQL) - RENDER
# ================================================================================
# À remplacer avec vos vraies credentials Render PostgreSQL
DATABASE_URL=postgresql://ott_user:votre_mot_de_passe@dpg-xxxxx-a.frankfurt-postgres.render.com:5432/ott_db
DB_HOST=dpg-xxxxx-a.frankfurt-postgres.render.com
DB_PORT=5432
DB_NAME=ott_db
DB_USER=ott_user
DB_PASSWORD=votre_mot_de_passe

# ================================================================================
# JWT & SÉCURITÉ
# ================================================================================
JWT_SECRET=votre_secret_production_fort_à_générer
AUTH_DISABLED=false

# ================================================================================
# EXPORT STATIQUE - DÉSACTIVÉ EN PRODUCTION
# ================================================================================
NEXT_STATIC_EXPORT=false
NEXT_PUBLIC_BASE_PATH=

# ================================================================================
# DÉBOGAGE - DÉSACTIVÉ EN PRODUCTION
# ================================================================================
DEBUG_ERRORS=false

# ================================================================================
# CORS (API PHP) - PRODUCTION
# ================================================================================
CORS_ALLOWED_ORIGINS=https://ott-dashboard.onrender.com,https://ott-api-c387.onrender.com

# ================================================================================
# FONCTIONNALITÉS OPTIONNELLES
# ================================================================================
NEXT_PUBLIC_ENABLE_DEMO_RESET=false
