# ================================================================================
# Variables d'Environnement - OTT Dashboard
# ================================================================================
# HAPPLYZ MEDICAL SAS
# 
# Instructions:
# 1. Copiez ce fichier vers .env.local (développement) ou configurez sur Render (production)
# 2. Remplissez les valeurs selon votre environnement
# ================================================================================

# ================================================================================
# ENVIRONNEMENT
# ================================================================================
APP_ENV=development
NODE_ENV=development

# ================================================================================
# API BACKEND (PHP)
# ================================================================================
NEXT_PUBLIC_API_URL=https://ott-jbln.onrender.com
API_PROXY_TARGET=https://ott-jbln.onrender.com
API_URL=https://ott-jbln.onrender.com

# ================================================================================
# BASE DE DONNÉES (PostgreSQL)
# ================================================================================
DATABASE_URL=postgresql://user:password@host:port/database
DB_HOST=dpg-xxxxx-a.frankfurt-postgres.render.com
DB_PORT=5432
DB_NAME=ott_db
DB_USER=ott_user
DB_PASSWORD=your_password_here

# ================================================================================
# EXPORT STATIQUE (GitHub Pages)
# ================================================================================
NEXT_STATIC_EXPORT=false
NEXT_PUBLIC_BASE_PATH=/OTT

# ================================================================================
# DÉBOGAGE
# ================================================================================
DEBUG_ERRORS=false

# ================================================================================
# NOTIFICATIONS (Optionnel)
# ================================================================================
SENDGRID_API_KEY=SG.xxxxxxxxxxxxxxxxxxxxx
SENDGRID_FROM_EMAIL=noreply@happlyz.com
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=xxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_PHONE_NUMBER=+33123456789

# ================================================================================
# CORS (API PHP)
# ================================================================================
CORS_ALLOWED_ORIGINS=https://ymora.github.io,http://localhost:3003

# ================================================================================
# FONCTIONNALITÉS OPTIONNELLES
# ================================================================================
NEXT_PUBLIC_ENABLE_DEMO_RESET=false
AUTH_DISABLED=false
JWT_SECRET=CHANGEZ_CE_SECRET_EN_PRODUCTION

